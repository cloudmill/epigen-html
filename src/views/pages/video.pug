extends ../layouts/master.pug

include ../components/copyright-link.pug
include ../components/footer.pug
include ../components/modals.pug

//- block cookies
block grid-test

block content
  .video-page
    .container
      .row
        .row__col.row__col--aside.row__col--rail
          .aside
            .aside__inner
              .aside__container
                .aside__top.modal(data-modal='4')
                  header.header(data-aos='fade-up')
                    a.header__logo(href='#')
                      +logo-svg.header__logo-svg
                    .header__menu(data-button='4')
                      .header__text
                        |Меню
                      .header__button
                        .header__burger
                  +modal-aside
                .aside__bottom(data-aos='fade-up')
                  +copyright-link(href='#')
                    |Компания «Инвар», 2021
        .row__col.row__col--main
          .page
            header.page__header
              .panel
                .panel__panel
                  .panel__row
                    .panel__col(data-aos='fade-up')
                      .panel__inner
                        .panel__product
                          //- .panel__product-item--active
                          a.panel__product-item(href='#')
                            .panel__product-mark
                            .panel__product-text
                              |Спрей
                          a.panel__product-item.panel__product-item--purple(href='#')
                            .panel__product-mark
                            .panel__product-text
                              |Гель
                    .panel__wrapper(data-aos='fade-up')
                      .panel__wrapper-row
                        .panel__wrapper-col
                          .panel__inner
                            a.panel__where-buy(href='#')
                              |Где купить
                            .panel__choice
                              .panel__choice-item(data-count=8 data-modal-button='3')
                                |Симптомы
                              .panel__choice-item(data-count=12 data-modal-button='2')
                                |Заболевания
                        .panel__wrapper-col
                          .panel__inner
                            .panel__test(data-button='3')
                              +calendar-test-svg.panel__test-icon
                              .panel__test-text
                                |Пройти тест
                            .panel__consultation(data-button='6')
                              +consultation-svg.panel__consultation-svg
                              .panel__consultation-text
                                |Консультация эксперта
                      .panel__modals
                        +modal-header
                  .panel__mobile
                    header.header(data-aos='fade-up')
                      a.header__logo(href="#")
                        +logo-svg.header__svg
                      .header__menu(data-modal-button='1')
                        .header__button
                          .header__burger
                  .panel__modals
                    +modal-mobile
            main.page__main
              h1.title(data-aos='fade-up')
                |Видео
              .rail.rail--margin-bottom--default.rail--desktop
              section.video-page__video
                ul.video-page__video-list
                  - for (i = 0; i < 6; i++)
                    li.video-page__video-item(data-aos='fade-up')
                      .video-page__video-row
                        .video-page__video-col
                          .video(data-button='10')
                            .video__container
                              .video__frame
                                img.video__img(src="assets/images/video.jpg", alt="")
                              .video__button
                                .video__button-icon
                                  +start-svg.video__button-svg
                        .video-page__video-col
                          .video-page__content
                            .video-page__content-top
                              h4.video-page__content-title
                                |ВПЧ и беременность
                              p.video-page__content-text(data-crop-text='')
                                |Опасно ли это для матери и ребенка? Что можно сделать, чтоб защитить женщину от вагинальных инфекций во время беременности смотритеженщину от вагинальных инфекций во время беременности смотрите
                            .video-page__content-bot
                              .video-page__content-label
                                |Рассказывает врач-эксперт
                              .doctor-card
                                .doctor-card__row
                                  .doctor-card__col
                                    .doctor-card__frame.doctor-card__frame--radius--right
                                      img(src="assets/images/doctor.jpg", alt="")
                                  .doctor-card__col
                                    .doctor-card__name
                                      |Бебнева Тамара Николаевна
                                    .doctor-card__pos
                                      |Врач акушер-гинеколог ФГБУ «НМИЦ эндокринологии» Минздрава России, к.м.н, доцент Кафедры акушерства, гинекологии и репродуктивной медицины РУДН
                      .rail.rail--blue.rail--margin-top--default
                .button-show-wrapper
                  .button-show(data-aos='fade-up')
                    .button-show__icon
                      +btn-plus-svg.button-show__svg
                    .button-show__text
                      |показать еще
            +footer.page__footer

  .modal(data-modal='10')
    .modal-video
      .modal-video__container
        .modal-video__row
          .modal-video__col
            .modal-video__content
              h3.modal-video__title
                |В этом видео вы найдете ответы на следующие вопросы:
              ul.reason-list
                each item in ['Прием антибиотиков широкого спектра действия', 'Несоблюдение интимной гигиены', 'Гормональный дисбаланс', 'Несоблюдение интимной гигиены', 'Гормональный дисбаланс']
                  li.reason-list__item
                    p.reason-list__text
                      |#{item}
          .modal-video__col
            .video.video--default
              .video__container
                .video__frame
                  video(id='video' poster='assets/images/video.jpg')
                    source(src='https://epigen.ru/spray/about/uploads/gel1.mp4')
                .video__button(id='play')
                  .video__button-icon
                    +start-svg.video__button-svg
        .modal-video__button
          .button-close.btn-animation.btn-animation--icon(data-button='10')
            +cross-svg.button-close__svg
  +modal-test 
  +modal-consultation