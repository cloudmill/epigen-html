extends ../layouts/master.pug

include ../components/footer.pug

block cookies
block grid-test

mixin copyright-link
  a.copyright-link(href=attributes.href)
    .copyright-link__mark
      +copyright-svg.copyright-link__mark-svg
    .copyright-link__text
      block


block content
  .video-page
    .container
      .row
        .row__col.row__col--aside.row__col--rail
          .aside
            .aside__inner
              .aside__container
                .aside__top
                  header.aside__header.aside__header--margin-bottom--default
                    a.aside__logo(href='#')
                      +logo-svg.aside__logo-svg
                    .aside__menu
                      .aside__menu-text
                        |Меню
                      .aside__menu-button
                .aside__bottom
                  +copyright-link(href='#')
                    |Компания «Инвар», 2021
        .row__col.row__col--main
          .page
            header.page__header
              .panel
                .panel__panel
                  .panel__row
                    .panel__col
                      .panel__inner
                        .panel__product
                          //- .panel__product-item--active
                          a.panel__product-item(href='#')
                            .panel__product-mark
                            .panel__product-text
                              |Спрей
                          a.panel__product-item.panel__product-item--purple(href='#')
                            .panel__product-mark
                            .panel__product-text
                              |Гель
                    .panel__col
                      .panel__inner
                        a.panel__where-buy(href='#')
                          |Где купить
                    .panel__col
                      .panel__inner
                        .panel__choice
                          .panel__choice-item(data-count=8)
                            |Симптомы
                          .panel__choice-item(data-count=12)
                            |Заболевания
                    .panel__col
                      .panel__inner
                        .panel__consultation
                          +consultation-svg.panel__consultation-svg
                          .panel__consultation-text
                            |Консультация эксперта
            main.page__main
              h1.title
                |Видео
              .rail
              section.video-page__video
                ul.video-page__video-list
                  - for (i = 0; i < 6; i++)
                    li.video-page__video-item
                      .video-page__video-row
                        .video-page__video-col
                          .video(data-modal-button='1')
                            .video__container
                              .video__frame
                                img.video__img(src="assets/images/video.jpg", alt="")
                              .video__button
                                .video__button-icon
                                  +start-svg.video__button-svg
                        .video-page__video-col
                          .video-page__content
                            .video-page__content-top
                              h4.video-page__content-title
                                |ВПЧ и беременность
                              p.video-page__content-text
                                |Опасно ли это для матери и ребенка? Что можно сделать, чтоб защитить женщину от вагинальных инфекций во время беременности смотрите ...
                            .video-page__content-bot
                              .video-page__content-label
                                |Рассказывает врач-эксперт
                              .doctor-card
                                .doctor-card__row
                                  .doctor-card__col
                                    .doctor-card__frame
                                      .doctor-card__portrait
                                  .doctor-card__col
                                    .doctor-card__name
                                      |Бебнева Тамара Николаевна
                                    .doctor-card__pos
                                      |Врач акушер-гинеколог ФГБУ «НМИЦ эндокринологии» Минздрава России, к.м.н, доцент Кафедры акушерства, гинекологии и репродуктивной медицины РУДН
                      .rail.rail--blue.rail--margin-top--default
              .button-show-wrapper
                .button-show
                  .button-show__icon
                    +plus-svg
                  .button-show__text
                    |показать еще

            +footer.page__footer

  .modal(data-modal='1')
    .modal-video
      .modal-video__wrapper
        .modal-video__container
          .modal-video__row
            .modal-video__col
              .modal-video__content
                h3.modal-video__title
                  |В этом видео вы найдете ответы на следующие вопросы:
                ul.reason-list
                  each item in ['Прием антибиотиков широкого спектра действия', 'Несоблюдение интимной гигиены', 'Гормональный дисбаланс', 'Несоблюдение интимной гигиены', 'Гормональный дисбаланс']
                    li.reason-list__item
                      p.reason-list__text
                        |#{item}
            .modal-video__col
              .video
                .video__container
                  .video__frame
                    img.video__img(src="assets/images/video.jpg", alt="")
                  .video__button
                    .video__button-icon
                      +start-svg.video__button-svg
          .modal-video__button
            .button-close
              +cross-svg.button-close__svg
