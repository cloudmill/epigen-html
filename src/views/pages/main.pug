extends ../layouts/master.pug

block grid-test
block header

mixin nav-page-d
  nav.nav-page-d
    ul.nav-page-d__list
      -
        var items = [
          {
            href: '#',
            title: 'Эпиген',
          },
          {
            href: '#',
            title: 'Экспертиза',
          },
          {
            href: '#',
            title: 'Актуальное',
          },
          {
            href: '#',
            title: 'Отзывы',
          },
        ]
      each item, index in items
        li.nav-page-d__item(class = ((index === 0) ? 'nav-page-d__item--active' : ''))
          a.nav-page-d__link(href=item.href)
            |!{item.title}

mixin copyright-link
  a.copyright-link(href=attributes.href)
    .copyright-link__mark
      .copyright-link__mark-text
        |©
    .copyright-link__text
      block

block content
  .main
    .container
      .row
        .row__col.row__col--aside
          .aside
            .aside__inner
              .aside__container
                .aside__top
                  header.aside__header.aside__header--margin-bottom--default
                    a.aside__logo(href='#')
                      +logo-svg.aside__logo-svg
                    .aside__menu
                      .aside__menu-text
                        |Меню
                      .aside__menu-button
                  +nav-page-d
                .aside__bottom
                  .aside__text.aside__text--margin-bottom--default
                    |Эпиген Интим — линия средств для женского интимного здоровья на основе активированной глицирризиновой кислоты из экстракта корня солодки
                  +copyright-link(href='#')
                    |Компания «Инвар», 2021
        .row__col.row__col--main
          .panel
            .panel__panel
              .panel__row
                .panel__col
                  .panel__product
                    //- .panel__product-item--active
                    a.panel__product-item(href='#')
                      .panel__product-mark
                      .panel__product-text
                        |Спрей
                    a.panel__product-item.panel__product-item--purple(href='#')
                      .panel__product-mark
                      .panel__product-text
                        |Гель
                .panel__col
                  a.panel__where-buy(href='#')
                    |Где купить
                .panel__col
                  .panel__choice
                    .panel__choice-item(data-count=8)
                      |Симптомы
                    .panel__choice-item(data-count=12)
                      |Заболевания
                .panel__col
                  .panel__consultation
                    +consultation-svg.panel__consultation-svg
                    .panel__consultation-text
                      |Консультация эксперта
          .main__content
            - for (let i = 0; i < 10; i++)
              |main
              br
            .qwe
