extends ../layouts/master.pug

block grid-test

block content
  -
    var pages = [
      {
        href: 'main.html',
        title: 'Главная',
      },
    ]
  .index
    .container
      .index__inner
        h1.index__title
          |Эпиген (верстка):
        nav.index__nav
          ul.index__list
            each page in pages
              li.index__item
                a.index__link(href=page.href)
                  span.index__link-text
                    |!{page.title}

